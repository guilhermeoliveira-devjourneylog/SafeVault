@{
    ViewData["Title"] = "Login - SafeVault";
}

<h2>Login</h2>

@if (ViewData["Message"] != null)
{
    <p style="color: red;">@ViewData["Message"]</p>
}

<form method="post" action="/Account/Login">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required minlength="3" maxlength="50" pattern="[a-zA-Z0-9]+" title="Only alphanumeric characters allowed">

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <button type="submit">Login</button>
</form>
