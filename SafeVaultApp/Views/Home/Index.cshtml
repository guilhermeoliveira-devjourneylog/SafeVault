@using SafeVaultApp.Helpers
@{
    ViewData["Title"] = "SafeVault Registration";
}

<h2>Register a User</h2>
<form method="post" action="/submit">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required minlength="3" maxlength="50" pattern="[a-zA-Z0-9]+" title="Only alphanumeric characters allowed">

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>

    <button type="submit">Submit</button>
</form>

@if (ViewData["Message"] != null)
{
    <p>@Html.Raw(XSSProtection.SanitizeInput(ViewData["Message"].ToString()))</p>
}
